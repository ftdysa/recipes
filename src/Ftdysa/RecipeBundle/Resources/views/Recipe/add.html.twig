{% extends 'FtdysaRecipeBundle:Main:layout.html.twig' %}
{% form_theme form 'FtdysaRecipeBundle:Form:fields.html.twig' %}
{% block main %}
    <div class="container">
        <div class="page-header">
            <h1>Add a recipe</h1>
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.prepTime) }}
            {{ form_row(form.cookTime) }}
            {{ form_row(form.servingSize) }}
            <h3>Ingredients</h3>
            <ul class="ingredients" data-prototype="{{ form_widget(form.ingredients.vars.prototype)|e }}">
                {% for ing in form.ingredients %}
                <li>{{ form_row(ing.name) }}</li>
                {% endfor %}
            </ul>
            <h3>Directions</h3>
            <ul class="directions" data-prototype="{{ form_widget(form.directions.vars.prototype)|e }}">
                {% for dir in form.directions %}
                    <li>{{ form_row(dir.description) }}</li>
                {% endfor %}
            </ul>
            <input type="submit" name="submit" value="Save" class="btn btn-primary" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block footerJs %}
    <script src="{{ asset('bundles/ftdysarecipe/vendors/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/ftdysarecipe/vendors/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/ftdysarecipe/js/add.js') }}"></script>
{% endblock footerJs %}